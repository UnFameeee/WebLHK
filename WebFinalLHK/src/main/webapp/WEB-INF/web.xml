<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <welcome-file-list>
        <welcome-file>startingPage.jsp</welcome-file>
        <welcome-file>homePage.jsp</welcome-file>
    </welcome-file-list>

    <listener>
        <listener-class>org.apache.tiles.extras.complete.CompleteAutoloadTilesListener</listener-class>
    </listener>

    <servlet>
        <servlet-name>Tiles Dispatch</servlet-name>
        <servlet-class>org.apache.tiles.web.util.TilesDispatchServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Tiles Dispatch</servlet-name>
        <url-pattern>*.tiles</url-pattern>
    </servlet-mapping>


    <!-- Login -->
    <servlet>
        <servlet-name>LoginControllerShowLogin</servlet-name>
        <servlet-class>com.unfame.Web.LoginController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginControllerShowLogin</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginControllerShowRegister</servlet-name>
        <servlet-class>com.unfame.Web.LoginController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginControllerShowRegister</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginControllerLogin</servlet-name>
        <servlet-class>com.unfame.Web.LoginController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginControllerLogin</servlet-name>
        <url-pattern>/loginAccount</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginControllerRegister</servlet-name>
        <servlet-class>com.unfame.Web.LoginController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginControllerRegister</servlet-name>
        <url-pattern>/registerAccount</url-pattern>
    </servlet-mapping>




    <!-- View Content -->
    <servlet>
        <servlet-name>ViewContentController</servlet-name>
        <servlet-class>com.unfame.Web.ViewContentController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ViewContentController</servlet-name>
        <url-pattern>/view</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ViewContentControllerDelete</servlet-name>
        <servlet-class>com.unfame.Web.ViewContentController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ViewContentControllerDelete</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ViewContentControllerEdit</servlet-name>
        <servlet-class>com.unfame.Web.ViewContentController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ViewContentControllerEdit</servlet-name>
        <url-pattern>/showEdit</url-pattern>
    </servlet-mapping>

    <!-- Add Content -->
    <servlet>
        <servlet-name>ViewContentControllerUpdate</servlet-name>
        <servlet-class>com.unfame.Web.ViewContentController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ViewContentControllerUpdate</servlet-name>
        <url-pattern>/update</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddContentController</servlet-name>
        <servlet-class>com.unfame.Web.AddContentController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AddContentController</servlet-name>
        <url-pattern>/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddContentControllerShow</servlet-name>
        <servlet-class>com.unfame.Web.AddContentController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AddContentControllerShow</servlet-name>
        <url-pattern>/showAdd</url-pattern>
    </servlet-mapping>

    <!-- Edit Profile -->
    <servlet>
        <servlet-name>EditProfileController</servlet-name>
        <servlet-class>com.unfame.Web.EditProfileController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>EditProfileController</servlet-name>
        <url-pattern>/editProfile</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EditProfileControllerShow</servlet-name>
        <servlet-class>com.unfame.Web.EditProfileController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>EditProfileControllerShow</servlet-name>
        <url-pattern>/showEditProfile</url-pattern>
    </servlet-mapping>

</web-app>