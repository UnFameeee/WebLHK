<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <welcome-file-list>
        <welcome-file>homePage.jsp</welcome-file>
    </welcome-file-list>

    <listener>
        <listener-class>org.apache.tiles.extras.complete.CompleteAutoloadTilesListener</listener-class>
    </listener>

    <servlet>
        <servlet-name>Tiles Dispatch</servlet-name>
        <servlet-class>org.apache.tiles.web.util.TilesDispatchServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Tiles Dispatch</servlet-name>
        <url-pattern>*.tiles</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ViewContentController</servlet-name>
        <servlet-class>com.unfame.Web.ViewContentController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ViewContentController</servlet-name>
        <url-pattern>/view</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ViewContentControllerDelete</servlet-name>
        <servlet-class>com.unfame.Web.ViewContentController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ViewContentControllerDelete</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddContentController</servlet-name>
        <servlet-class>com.unfame.Web.AddContentController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AddContentController</servlet-name>
        <url-pattern>/add</url-pattern>
    </servlet-mapping>

</web-app>